<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.wgunn.collegeschedulelite">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeScheduleLite">
        <receiver
            android:name=".Utilities.Alerts"
            android:enabled="true" />
        <activity
            android:name=".UI.NoteDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AssessmentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AddEditAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AddEditNoteActivity"
            android:exported="false" />
        <activity
            android:name=".UI.AddEditCourseActivity"
            android:exported="false" />
        <activity
            android:name=".UI.CourseDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.CourseListActivity"
            android:exported="false"
            android:label="@string/my_courses" />
        <activity
            android:name=".UI.AddEditTermActivity"
            android:exported="false" />
        <activity
            android:name=".UI.TermDetailActivity"
            android:exported="false" />
        <activity
            android:name=".UI.TermListActivity"
            android:exported="false"
            android:label="@string/my_terms" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>